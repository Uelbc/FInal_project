<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectPhysicalActivity">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:gravity="center"
        android:text="Как часто вы занимаетесь физической активностью?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <RadioButton
            android:id="@+id/level1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:checked="true"
            android:text="Физ. нагрузка отсутствует или минимальна" />

        <RadioButton
            android:id="@+id/level2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Умеренная активность 3 раза в неделю" />

        <RadioButton
            android:id="@+id/level3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Тренировки средней интенсивности 5 раз в неделю" />

        <RadioButton
            android:id="@+id/level4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Интенсивные тренировки 5 раз в неделю" />

        <RadioButton
            android:id="@+id/level5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ежедневные тренировки" />

        <RadioButton
            android:id="@+id/level6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Интенсивные тренировки каждый день" />

        <RadioButton
            android:id="@+id/level7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Интенсивные тренировки 2 раза в день или тяжелая физическая работа" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next"
        android:layout_width="247dp"
        android:layout_height="75dp"

        android:background="@xml/buttons"
        android:text="Далее"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />
</androidx.constraintlayout.widget.ConstraintLayout>