<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".Select_training">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите тренировку:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/press"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:drawableTop="@raw/press_icon"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@xml/training_buttons"
        android:text="Тренировка на пресс"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ruki"
        android:drawableTop="@raw/ruki_icon"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@xml/training_buttons"
        android:text="Тренировка на руки"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/press" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/spina"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:drawableTop="@raw/spina_icon"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@xml/training_buttons"
        android:text="Тренировка на спину"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ruki" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nogi"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:drawableTop="@raw/nogi_icon"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@xml/training_buttons"
        android:text="Тренировка на ноги"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spina" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/vse"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:drawableTop="@raw/vse_icon"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@xml/training_buttons"
        android:text="Тренировка на все тело"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nogi" />


</androidx.constraintlayout.widget.ConstraintLayout>